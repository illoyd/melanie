.row
  .col-sm-6.col-lg-12
    / About Card
    %aside.card
      .header
        %h4.title About
      .content
        %dl
          %dt Name
          %dd= vertex.name

  .col-sm-6.col-lg-12
    / Important Dates Card
    %aside.card
      .header
        %h4.title Important Dates
      .content
        %dl
          - vertex.important_dates.each do |key, value|
            - if value.present?
              %dt= key.to_s.humanize
              %dd= value

.row
  .col-xs-12
    / All Data
    %aside.card
      .header
        %h4.title All Data
        %p.category Debug Data
      .content
        %dl
          - @vertex.document_attributes.each do |key, value|
            - if value.present?
              %dt= key.to_s.humanize
              %dd= value
